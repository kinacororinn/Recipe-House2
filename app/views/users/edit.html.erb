<div class="container">
 <div class="low">
   <div class="col-md-10">
<h1>マイページ編集</h1>
<!-- form_with部分 -->
<%= form_with model: @user,local: true do |f| %>
<table class="table">

  <div class="form-group">
   <%= f.label :名前 %>
   <%= f.text_field :name %>
  </div>

  <div class="form-group">
   <%= f.label :画像 %>
   <%= f.attachment_field :profile_image %>
  </div>

  <div class="form-group">
   <%= f.label :コメント %>
   <%= f.text_area :introduction,:size=>"80x2" %>
  </div>


  <%= f.submit '変更を保存' , class: 'btn btn-success'%>

<% end %>
</table>
</div>
</div>

