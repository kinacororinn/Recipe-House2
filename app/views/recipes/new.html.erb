<% if @recipe.errors.any? %>
    <h3>入力した内容にエラーが<%= @recipe.errors.count %>件あります</h3>
    <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>

<div class="container">
<h1>新規投稿</h1>
 <!-- form_with部分 -->
  <%= form_with model: @recipe,local: true do |f| %>

   <div class="form-group col-8 mx-auto d-flex">
    <%= f.label :画像 %>
    <%= f.attachment_field :image %>
   </div>

   <div class="form-group col-8 mx-auto d-flex">
    <%= f.label :メニュー名 %>
    <%= f.text_field :title,:size=>"45x1" %>
   </div>

   <div class="form-group col-8 mx-auto d-flex">
    <%= f.label :分量 %>
    <%= f.text_area :component,:size=>"80x5" %>
   </div>

   <div class="form-group col-8 mx-auto d-flex">
    <%= f.label :作り方 %>
    <%= f.text_area :explanation,:size=>"80x5" %>
   </div>

   <div class="form-group col-8 mx-auto d-flex">
    <%= f.label :カテゴリー %>
    <%= f.collection_select(:category_id, Category.all, :id, :name) %>
   </div>

   <div class="form-group col-8 mx-auto d-flex">
    <%= f.label :所要時間 %>
    <%= f.text_field :time %>分
   </div>

   <%= f.submit '投稿する', class: 'btn btn-primary' %>
  <% end %>
  </div>